<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:layout_centerInParent="true"
        android:background="@drawable/img_11"
        >

        <Button
            android:id="@+id/login_register_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/login_login_button"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:background="@color/colorPrimary"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <Button
            android:id="@+id/login_login_button"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/login_get_password_edit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="52dp"
            android:background="@android:color/holo_blue_light"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20dp" />
        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:id="@+id/logo_icon_image"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:src="@drawable/img_13"
            />

        <EditText
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/login_get_password_edit"
            android:drawableLeft="@android:drawable/ic_lock_idle_lock"
            android:hint="密码："
            android:layout_below="@+id/login_get_account_edit"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/editsharp"
            />

        <EditText
            android:layout_width="400dp"
            android:layout_height="60dp"
            android:inputType="textPersonName"
            android:id="@+id/login_get_account_edit"
            android:drawableLeft="@android:drawable/ic_menu_myplaces"
            android:hint="手机号："
            android:layout_below="@+id/logo_icon_image"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/editsharp"/>


        <CheckBox
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:text="记住密码"
            android:id="@+id/login_remember_checkbox"
            android:layout_below="@+id/login_get_password_edit"
            android:checked="false"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:textSize="14dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="忘记密码？"
            android:id="@+id/login_change_password_textview"
            android:layout_below="@+id/login_get_password_edit"
            android:layout_marginLeft="280dp"
            android:textSize="14dp"
            android:layout_alignBottom="@+id/login_remember_checkbox" />

    </RelativeLayout>



</RelativeLayout>