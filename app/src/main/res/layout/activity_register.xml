<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/login_view"
        android:layout_width="500dp"
        android:layout_height="800dp"
        android:layout_centerInParent="true"
        android:background="@drawable/img_11"
        >

        <ImageView
            android:layout_width="300dp"
            android:layout_height="150dp"
            android:id="@+id/logo"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignWithParentIfMissing="false"
            android:src="@drawable/img_13"
            />
        <EditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:id="@+id/edit_name"
            android:hint="昵称："
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/editsharp"
            android:layout_below="@+id/logo"
            android:layout_alignLeft="@+id/logo"
            android:layout_alignStart="@+id/logo"
            />

        <EditText
            android:layout_width="260dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:id="@+id/edit_Tel"
            android:hint="手机号："
            android:background="@drawable/editsharp"
            android:layout_below="@+id/edit_name"
            android:layout_alignLeft="@+id/edit_name"
            android:layout_alignStart="@+id/edit_name"
            />
        <Button
            android:id="@+id/btn_send"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="205dp"
            android:layout_alignLeft="@+id/edit_name"
            android:layout_marginLeft="280dp"
            android:layout_marginRight="20dp"
            android:background="@android:color/holo_blue_light"
            android:text="发送"
            android:textColor="#ffffff"
            android:textSize="20dp" />

        <EditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:inputType="textPersonName"
            android:id="@+id/edit_ver"
            android:hint="验证码："
            android:background="@drawable/editsharp"
            android:layout_below="@+id/edit_Tel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            />
        <EditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_pwd"
            android:hint="密码："
            android:layout_below="@+id/edit_ver"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/editsharp"
            />
        <EditText
            android:layout_width="400dp"
            android:layout_height="50dp"
            android:inputType="textPassword"
            android:ems="10"
            android:id="@+id/edit_pwd2"
            android:hint="确认密码："
            android:layout_below="@+id/edit_pwd"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/editsharp"
            />
        <Button
            android:id="@+id/login_btn_login"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edit_pwd2"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="32dp"
            android:background="@android:color/holo_blue_light"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20dp" />
    </RelativeLayout>
</RelativeLayout>
